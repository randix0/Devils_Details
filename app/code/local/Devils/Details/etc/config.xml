<?xml version="1.0"?>
<config>
    <modules>
        <Devils_Details>
            <version>0.1.0.3</version>
        </Devils_Details>
    </modules>
    <!--
    <default>
        <devils_details>
            <frontend>
                <list_mode>0,1</list_mode>
            </frontend>
        </devils_details>
    </default>
    -->
    <global>
        <blocks>
            <devils_details>
                <class>Devils_Details_Block</class>
            </devils_details>
        </blocks>
        <resources>
            <devils_details_setup>
                <setup>
                    <module>Devils_Details</module>
                    <class>Devils_Details_Model_Resource_Setup</class>
                </setup>
            </devils_details_setup>
        </resources>
        <models>
            <devils_details>
                <class>Devils_Details_Model</class>
                <resourceModel>devils_details_resource</resourceModel>
            </devils_details>
            <devils_details_resource>
                <class>Devils_Details_Model_Resource</class>
                <entities>
                    <details_source>
                        <table>devils_details_entity</table>
                    </details_source>
                </entities>
            </devils_details_resource>
        </models>
        <helpers>
            <devils_details>
                <class>Devils_Details_Helper</class>
            </devils_details>
        </helpers>
    </global>
    <frontend>
        <routers>
            <devils_details>
                <use>standard</use>
                <args>
                    <module>Devils_Details</module>
                    <frontName>details</frontName>
                </args>
            </devils_details>
        </routers>
        <default>
            <router>devils_details</router>
        </default>
        <layout>
            <updates>
                <devils_details>
                    <file>devils/details.xml</file>
                </devils_details>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Devils_Details after="Mage_Adminhtml">Devils_Details_Adminhtml</Devils_Details>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <devils_details>
                    <file>devils/details.xml</file>
                </devils_details>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <devils_details>
            <general>
                <show_notice>1</show_notice>
                <notice>20</notice>
                <notice_msg>%q left!</notice_msg>
                <translate>0</translate>
                <halo>#006699</halo>
                <display>0</display>
            </general>
        </devils_details>
    </default>
</config>