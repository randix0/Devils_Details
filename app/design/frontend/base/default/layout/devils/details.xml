<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info">
            <block type="catalog/product_view_attributes" name="product.attributes" as="additional"
                   template="devils/details/catalog/product/view/attributes.phtml">
                <action method="addToParentGroup">
                    <group>detailed_info</group>
                </action>
            </block>
            <block type="devils_details/details" name="devils.details"
                   template="devils/details/catalog/product/view/details.phtml">
                <action method="addToParentGroup">
                    <group>detailed_info</group>
                </action>
            </block>
        </reference>
    </catalog_product_view>
    <devils_details_index_view translate="label">
        <label>Detail</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="contacts"><title>Detail</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
            <action method="setHeaderTitle" translate="title" module="contacts"><title>Detail</title></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="contactForm" template="devils/details/details.phtml"/>
        </reference>
    </devils_details_index_view>
    <devils_details_view>
        <update handle="devils_details_index_view"/>
    </devils_details_view>
</layout>