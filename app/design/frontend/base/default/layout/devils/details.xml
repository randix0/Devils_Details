<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info">
            <block type="catalog/product_view_attributes" name="product.attributes" as="additional"
                   template="devils/details/catalog/product/view/attributes.phtml">
                <action method="addToParentGroup">
                    <group>detailed_info</group>
                </action>
            </block>
            <block type="devils_details/details" name="devils.details" template="devils/details/details.phtml">
                <action method="addToParentGroup">
                    <group>detailed_info</group>
                </action>
            </block>
        </reference>
    </catalog_product_view>
</layout>

